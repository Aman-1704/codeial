<header id="partial-header">

    <div class="logo-container">
        <a href="/">
            <img src="/images/Codeial-logo.png" alt="Codeial Logo" class="logo-image">
        </a>
        <span class="logo-text">Codeial</span>
    </div>

    <div id="right-content">
        <ul>
            <%if(locals.user){%>
                <li>
                    <a href="/users/profile">
                        <%= user.name %>
                    </a>
                </li>
                <li>
                    <a href="/users/signOut"> Log Out</a>
                </li>
            <%}else{%>
                <li>
                    <a href="/users/signIn"> Log In</a>
                </li>
                <li>
                    <a href="/users/signUp"> Sign Up</a>
                </li>
            <%}%>
        </ul>
    </div>

</header>